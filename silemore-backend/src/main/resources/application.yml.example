server:
  port: ${SERVER_PORT:8080}

spring:
  datasource:
    url: jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:silemore}?useSSL=false&serverTimezone=Asia/Shanghai
    username: ${DB_USER:root}
    password: ${DB_PASSWORD:your_password_here}
  jpa:
    hibernate:
      ddl-auto: update
    open-in-view: false
    properties:
      hibernate:
        jdbc:
          time_zone: Asia/Shanghai
  jackson:
    time-zone: Asia/Shanghai
  mail:
    host: ${MAIL_HOST:smtp.example.com}
    port: ${MAIL_PORT:465}
    username: ${MAIL_USERNAME:your_email@example.com}
    password: ${MAIL_PASSWORD:your_email_password}
    properties:
      mail:
        smtp:
          auth: true
          ssl:
            enable: true
          starttls:
            enable: false

app:
  base-url: ${APP_BASE_URL:http://localhost:8080/api/v1}
  support-email: ${SUPPORT_EMAIL:support@example.com}
  contact-verify-path: /contacts/verify
  version: ${APP_VERSION:1.0.0}
  build-time: ${APP_BUILD_TIME:unknown}
  git-commit: ${APP_GIT_COMMIT:unknown}

jwt:
  secret: ${JWT_SECRET:your_jwt_secret_at_least_32_characters}
  expiration-seconds: 604800
  remember-me-seconds: 604800
